  <RecipeDef ParentName="ChargeAmmoRecipeBase">
    <defName>MakeAmmo_SWPlasmaGasCartridge</defName>
    <label>make Plasma Gas Cartridges  x100</label>
    <description>Craft 100 Plasma Gas Cartridges .</description>
    <jobString>Making Plasma Gas Cartridges .</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Component</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Plasteel</li>
        <li>Component</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_SWPlasmaGasCartridge>100</Ammo_SWPlasmaGasCartridge>
    </products>

   <workSpeedStat>SmithingSpeed</workSpeedStat>
   <effectWorking>Cook</effectWorking>
   <soundWorking>Recipe_Machining</soundWorking>
   <allowMixingIngredients>true</allowMixingIngredients>
   <workAmount>200</workAmount>
   <workSkill>Crafting</workSkill>
   <targetCountAdjustment>100</targetCountAdjustment>
               <recipeUsers>
         <!-- Need an empty list here or the ammo injector will throw a null ref exception -->
               </recipeUsers>
               <conceptLearned>CE_AmmoCrafting</conceptLearned>
               <unfinishedThingDef>UnfinishedAmmo</unfinishedThingDef>
  </RecipeDef>

